<?xml version="1.0"?>
<robot name="industrial_arm">
  <material name="orange"><color rgba="1.0 0.5 0.0 1.0"/></material>
  <material name="dark_grey"><color rgba="0.2 0.2 0.2 1.0"/></material>

  <link name="base_link">
    <visual><geometry><cylinder length="0.08" radius="0.25"/></geometry><material name="dark_grey"/></visual>
  </link>

  <joint name="joint_1" type="revolute">
    <parent link="base_link"/><child link="link_1"/>
    <origin xyz="0 0 0.08"/><axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1"/>
  </joint>

  <link name="link_1">
    <visual><geometry><cylinder length="0.15" radius="0.12"/></geometry><material name="orange"/></visual>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="link_1"/><child link="link_2"/>
    <origin xyz="0 0 0.1"/><axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <link name="link_2">
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 0.4"/></geometry>
      <material name="orange"/>
    </visual>
  </link>

  <joint name="joint_3" type="revolute">
    <parent link="link_2"/><child link="link_3"/>
    <origin xyz="0 0 0.4"/><axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <link name="link_3">
    <visual>
      <origin xyz="0 0 0.15"/><geometry><box size="0.08 0.08 0.3"/></geometry><material name="orange"/></visual>
  </link>

  <joint name="joint_4" type="revolute">
    <parent link="link_3"/><child link="gripper_base"/>
    <origin xyz="0 0 0.3"/><axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <link name="gripper_base">
    <visual><geometry><box size="0.15 0.05 0.05"/></geometry><material name="dark_grey"/></visual>
  </link>
</robot>
